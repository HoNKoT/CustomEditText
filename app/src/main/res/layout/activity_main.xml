<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        >

    <data>

        <variable
                name="viewModel"
                type="jp.honkot.customedittext.MainActivity.ViewModel"
                />
    </data>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onButtonClicked"
                    android:text=">> log"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:hint="DefaultInputType(-1)"
                    app:layout_constraintTop_toBottomOf="@+id/button"
                    app:text="@={viewModel.input3}"
                    app:textSize="24sp"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:hint="InputType=text(0)"
                    app:inputType="text"
                    app:layout_constraintTop_toBottomOf="@+id/editText1"
                    app:text="@={viewModel.input2}"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:hint="InputType=number(1)"
                    app:inputType="number"
                    app:layout_constraintTop_toBottomOf="@+id/editText2"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:hint="InputType=numberDecimal(2)"
                    app:inputType="numberDecimal"
                    app:layout_constraintTop_toBottomOf="@+id/editText3"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:hint="InputType=singleLineText(3)"
                    app:inputType="singleLineText"
                    app:layout_constraintTop_toBottomOf="@+id/editText4"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:hint="InputType=text(4)"
                    app:inputType="multiLineText"
                    app:layout_constraintTop_toBottomOf="@+id/editText5"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:hint="InputType=password(5)"
                    app:inputType="password"
                    app:layout_constraintTop_toBottomOf="@+id/editText6"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText7"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText8"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText9"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText10"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText11"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText12"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText13"
                    />

            <jp.honkot.customedittext.CustomEditText
                    android:id="@+id/editText15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/editText14"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
