<resources>
    <declare-styleable name="CustomEditText">
        <attr name="labelTextSize" format="string" />
        <attr name="textSize" format="string" />
        <attr name="hint" format="string" />
        <attr name="inputType" format="integer">
            <enum name="text" value="0" />
            <enum name="number" value="1" />
            <enum name="numberDecimal" value="2" />
            <enum name="singleLineText" value="3" />
            <enum name="multiLineText" value="4" />
            <enum name="password" value="5" />
        </attr>
    </declare-styleable>
</resources>
